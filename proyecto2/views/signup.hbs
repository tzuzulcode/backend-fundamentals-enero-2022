<main class="flex justify-center mt-20">
    <form class="bg-gray-100 flex flex-col w-1/2 p-10 gap-5" action="/signup" method="post">
        {{!-- name: es el nombre de la propiedad cuando recibamos el formulario --}}
        {{!-- type: indica el tipo de formulario --}}
        <input class="p-2" type="text" name="name" placeholder="Name..." value="{{user.name}}" required>
        <input class="p-2" type="email" name="email" placeholder="Email..." value="{{user.email}}" required>
        <input class="p-2" type="text" name="username" placeholder="Username..." value="{{user.username}}" required>
        <input class="p-2" type="datetime-local" name="birthday" placeholder="Birthday..." value="{{user.birthday}}" required>
        <input class="p-2" type="text" name="profilePic" placeholder="Profile pic..." value="{{user.profilePic}}" required>
        <input class="p-2" type="password" name="password" placeholder="Password..." required>
        <input class="p-2" type="password" name="passwordRepeated" placeholder="Repeat password..." required>
        <button class="bg-blue-200 p-2 hover:bg-yellow-200">Enviar</button>

        {{#unless validation.success}}
            <ul>
            {{#each validation.errors}}
                <li class="text-red-700">
                    {{this}}
                </li>
            {{/each}}
            </ul>
        {{/unless}}

    </form>
</main>